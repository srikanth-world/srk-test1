Sub ApplyConditionalFormattingToAllSheetsWithColumnHighlight()
    Dim ws As Worksheet
    Dim rng As Range
    Dim formula As String
    Dim cell As Range
    Dim uniqueValue As Variant
    
    formula = "A2:W2" ' Range in row 2 containing the column headers
    
    For Each ws In ThisWorkbook.Sheets
        Set rng = ws.Range(formula)
        
        ' Loop through each cell in the specified range
        For Each cell In rng
            uniqueValue = cell.Value
            If Application.WorksheetFunction.CountIf(rng, uniqueValue) = 1 Then
                ' Apply conditional formatting to the cell (column header)
                cell.FormatConditions.Add Type:=xlTextString, String:="=" & uniqueValue
                With cell.FormatConditions(1)
                    .Interior.Color = RGB(172, 185, 130) ' Background color
                    .Font.Color = RGB(0, 0, 0) ' Font color
                End With
            End If
        Next cell
    Next ws
End Sub
